        link(rel="stylesheet", href="/css/styles.css")
        link(rel="icon", href="/images/smile.png", type="image/png")
        block head
    body 
        header 
            nav 
                ul 
                    li: a(href="/") Home 
                    li: a(href="/products/all") All Products 
                    li: a(href="/products/Electronics") Electronics 
                    li: a(href="/products/Furniture") Furniture 
                    li: a(href="/products/Clothing") Clothing 

        div#home-welcome    
