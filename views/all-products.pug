extends layout 

block head
    link(rel="stylesheet", href="/css/allProducts.css")
    
block home-content

block content 
    h2 All Products 
    .products 
        each product in productList 
            .card 
                img(src=product.image, alt=product.name)
                h3 #{product.name}
                p $#{product.price}
                p #{product.description}
                ul 
                    each feature in product.features 
                        li #{feature}
                a(href=`/products/product/${product.id}`) View Details 